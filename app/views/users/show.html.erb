<p id="notice"><%= notice %></p>
<title><%=@user.name%></title>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
  <% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
